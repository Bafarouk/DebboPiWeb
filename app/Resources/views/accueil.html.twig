<script>
    $(document).ready(function () {
        $('#rech').keyup(function () {
            console.log();
        var produit =$(this).val()
            if(produit!=""){
                $.ajax({
                    type:'POST',
                    url:'/debboWeb/web/app_dev.php/Stock/recherche',
                    data:'produit='+encodeURIComponent(produit),
                    success:function (data) {
                        if(data != ""){
                            $('#resultat').append(data);
                        }else{
                            document.getElementById('resultat').innerHTML= "<div style='font-size:20px; text-align:center; margin-top:10px'> Aucun produit</div>"
                        }
                    }
