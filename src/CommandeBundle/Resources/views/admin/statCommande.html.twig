{% extends 'admin.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>{{ quantite.cnt }}</h3>

                    <p>Nbr des commandes Total</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>

            </div>
            <div class="small-box bg-warning" style="margin-top: -11px">
                <div class="inner">
                    <h3>{{duree.cnt}}</h3>

                    <p>Nbr des commandes Mensuel</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>

            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">

                    <div class="percent">
                        <svg>
                            <circle cx="70" cy="70" r="70"></circle>
                            <circle cx="70" cy="70" r="70"></circle>
                        </svg>
                        <div class="number">
                            <h2>{{(duree.cnt/quantite.cnt* 100)|number_format(2)  }}
                                <span>%</span></h2>
                        </div>
                    </div>
                    <h4>pourcentage pour ce mois</h4>

                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>

            </div>
        </div>

        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <div>
                    <h3>{{ produit.produit.getLibelle() }}</h3>
                    <h5>Produit le plus achet√©</h5>
                    </div>

                    <div id="info" style="display: none; height: 100px; ">
                        <h6>Marque     : {{ produit.produit.getMarque() }}</h6>
                        <h6>Entreprise : {{ produit.produit.getfkEntrepot().getEntreprise() }}</h6>
                        <h6>Qtt d'Achat : {{ produit.qtt[0].somme }}</h6>

                    </div>
                </div>
                <a onclick="myFunction()" id="more" style="display:block;" class="small-box-footer">
                    <i class="fas fa-arrow-circle-right"></i></a>


            </div>
        </div>
    </div>
    <!-- Load jQuery from Google's CDN if needed -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

    <script src="//code.highcharts.com/4.1.8/highcharts.js"></script>
    <script src="//code.highcharts.com/4.1.8/modules/exporting.js"></script>
    <script type="text/javascript">
        {{ chart(chart) }}
    </script>
        <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>

    <script>
        function myFunction() {
            var x = document.getElementById("info");

            if (x.style.display === "none") {
                x.style.display = "block";


            } else {
                x.style.display = "none";

            }
        }
    </script>
<style>
  .percent  svg{
        position: relative;
        height: 150px;
        width: 150px;
        z-index: 1000;
    }
   .percent svg circle{
        width: 100%;
        height: 100%;
        fill:none;
        stroke: #fff;
        stroke-width: 10;
        stroke-linecap: round;
        transform: translate(5px,5px);

    }
  .percent svg circle:nth-child(2){
      stroke-dasharray: 440;
      stroke-dashoffset: calc(440 - ((440 * var(--taille)) / 100));
      stroke: orange;

  }

    .percent .number{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
    }
  .percent {
    --taille:{{(duree.cnt/quantite.cnt* 100)|number_format(2)  }};
    margin: auto;
      position: relative;
      width: 150px;
      height: 150px;
      box-shadow: inset 0 0 50px #000;
      border-radius: 50%;
  }
  .percent .number h2{
    color: orange;
      font-size: 25px;
      font-weight: 700;
      transition: 0.5s;
  }
  .percent:hover .number h2{
      color: #fff;
      font-size: 35px;
  }

</style>
{% endblock %}