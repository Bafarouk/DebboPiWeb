{% extends 'admin.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>{{ quantite.cnt }}</h3>

                    <p>Nbr des commandes Total</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="#" class="small-box-footer"><i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>{{(duree.cnt/quantite.cnt* 100)|number_format(2)  }}%</h3>

                    <p>pourcentage pour ce mois</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="#" class="small-box-footer"> <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>{{duree.cnt}}</h3>

                    <p>Nbr des commandes Mensuel</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="#" class="small-box-footer"> <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <div>
                    <h3>{{ produit.produit.getLibelle() }}</h3>
                    <p>Produit le plus achet√©</p>
                    </div>

                    <div id="info" style="display: none">
                        <p>Marque     : {{ produit.produit.getMarque() }}</p>
                        <p>Entreprise : {{ produit.produit.getfkEntrepot().getEntreprise() }}</p>
                        <p>Qtt d'Achat : {{ produit.qtt[0].somme }}</p>

                    </div>
                </div>
                <a onclick="myFunction()" id="more" style="display:block;" class="small-box-footer">
                    <i class="fas fa-arrow-circle-right"></i></a>


            </div>
        </div>
    </div>
    <!-- Load jQuery from Google's CDN if needed -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

    <script src="//code.highcharts.com/4.1.8/highcharts.js"></script>
    <script src="//code.highcharts.com/4.1.8/modules/exporting.js"></script>
    <script type="text/javascript">
        {{ chart(chart) }}
    </script>

    <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
    <script>
        function myFunction() {
            var x = document.getElementById("info");

            if (x.style.display === "none") {
                x.style.display = "block";


            } else {
                x.style.display = "none";

            }
        }
    </script>

{% endblock %}