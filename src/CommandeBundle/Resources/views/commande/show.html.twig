{% extends 'base.html.twig' %}

{% block body %}
    <div class="banner-top">
        <div class="container">
            <h3 >Commande</h3>
            <div class="clearfix"> </div>
        </div>
    </div>
<div >
    <div style="margin: 100px 0 0 100px">
    <div class="logo">
        <h1> <a href=""><img src="images/debo.jpg" alt="" title="" />DeBBo.<span>Le meilleur entrepôt</span></a></h1>
    </div>
    <h3>COMMANDE</h3>
    <table class="table-bordered" style="width: 500px;height: 100px; margin-top: 20px">
        <tbody class="text-center" style="text-align: center">
        <tr  >
            <th class="text-center">Reference</th>
            <th class="text-center">Typepaiement</th>
            <th class="text-center">Datecommande</th>
            <th class="text-center">Dateexp</th>
