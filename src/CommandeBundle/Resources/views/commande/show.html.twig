        </tr>
        </tbody>
    </table>

    <table class="table" style="border-bottom:none; border-left:none;  width: 500px;height: 100px; margin: 100px 0 20px 100px;">
        <tbody>

            <tr >
                <th class="table-bordered">Reference</th>
                <th class="table-bordered">Marque</th>
                <th class="table-bordered">prix Produit</th>
                <th class="table-bordered">Quantité</th>
            </tr>
            {% for i in 0..listproduit|length-1 %}
                <tr>

                    <td class="table-bordered">{{ produits[i].reference }}</td>
                    <td class="table-bordered">{{ produits[i].marque }}</td>
                    <td class="table-bordered">{{ listproduit[i].prixProduit }}</td>
                    <td class="table-bordered">{{ listproduit[i].quantiteProduit }}</td>
                </tr>
                <tr >

                    <th ></th>
                    <th></th>
                    <th></th>
                    <th class="table-bordered">TOTAL</th>
                </tr>
                <tr >

                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="table-bordered">{{commande.total }}</td>
                </tr>

            {% endfor %}
        </tbody>
    </table>
</div>
    <div style="float:left;margin: 100px 0 100px 100px;">



