{% extends 'base.html.twig' %}

{% block content %}

    <div class="banner-top">
        <div class="container">
            <h3 >Produit</h3>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <a href="#"> <img class="first-slide" src="{{ asset('images/ba.jpg') }}" alt="First slide"></a>

        </div>
        <div class="item">
            <a href="#"> <img class="second-slide " src="{{ asset('images/ba1.jpg') }}" alt="Second slide"></a>

        </div>
        <div class="item">
            <a href="#"><img class="third-slide " src="{{ asset('images/ba2.jpg') }}" alt="Third slide"></a>

        </div>
    </div>
    </div>

{#*********************************************header*********************************************************#}
    <div class="content-top ">
    <div class="container ">
    <div class="table-head ">
        <nav class="nav justify-content-center">
            <ul class="nav tabs dropdown " id="myTab" >
                <li class="active"><a href="#tab" data-toggle="tab" id="tous" >Tous les produits</a></li>
                <li class=""><a href="#tab1" data-toggle="tab" id="ent">Trier par entrepôt</a></li>
                <li class=""><a href="#tab2" data-toggle="tab" id="categ">Trier par catégorie</a></li>
            </ul>
        </nav>
{#*********************************************nav*********************************************************#}

    <div class=" tab-content tab-content-t " >
            <div class="tab-pane active text-style" id="tab" >
                {% for produit in produits %}
                        <div class=" con-w3l">
                            <div class="col-md-3 m-wthree">
                                <div class="col-m">
                                    <a href="#" data-toggle="modal" data-target="#myModal4" class="offer-img">
                                        <img src="{{ asset('public/images/produits/'~produit.imageName) }}" class="img-responsive img" alt="">
                                        {% if produit.quantite <= 10 %}
                                            <div class="offer"><p><span>Promotion</span></p></div>
                                        {% endif %}
                                    </a>
                                    <div class="mid-1">
                                        <div class="women">

                                                    <h6><a href="">{{  produit.libelle }}</a>({{ produit.marque }})</h6>
                                        </div>
                                        <div class="mid-2">

                                            {% if produit.quantite <= 10 %}
                                           <p ><label>{{ produit.prix }}</label><em class="item_price">{{produit.prix * 0.9}}</em></p>
                                                {% else %}
                                                    <p ><em class="item_price">{{produit.prix }}DT</em></p>
                                                    {% endif %}

                                                    <div class="block">
                                                <div class="starbox small ghosting"> </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="add">
                                            <li class="btn btn-danger my-cart-btn my-cart-b" > <a  href="{{ path('produit_show', { 'idProduit': produit.idProduit }) }}">Afficher</a></li>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                {% endfor %}
            </div>
{#**********************************************tt produits********************************************************#}
        <div class="tab-pane text-style" id="tab1" >
            {% set i=1 %}
            {% for entrepot in entrepots %}
                <nav class="nav-sidebar">

                        <ul class="nav tabs" >
                            {% if i==1 %}
                            <li class="active"><a href="#{{ entrepot.idEntrepot }}" data-toggle="tab" id="ent1"~i>{{ entrepot.entreprise }}</a></li>
                            {% else %}
                                <li class=""><a href="#{{ entrepot.idEntrepot }}" data-toggle="tab" id="ent1"~i>{{ entrepot.entreprise }}</a></li>
                            {% endif %}
                                </ul>
                {% set i=i+1 %}
                </nav>
                {% if i==1 %}
            <div class="tab-pane active text-style" id="{{ entrepot.idEntrepot }}" >
                {% else %}
                    <div class="tab-pane hide text-style" id="{{ entrepot.idEntrepot }}" >
                        {% endif %}

                    {% for produit in produits %}
                    {% if produit.fkEntrepot == entrepot %}
                                <div class=" con-w3l">
                                    <div class="col-md-3 m-wthree">
                                        <div class="col-m">
                                            <a href="#" data-toggle="modal" data-target="#myModal4" class="offer-img">
                                                <img src="{{ asset('public/images/produits/'~produit.imageName) }}" class="img-responsive img" alt="">
                                                {% if produit.quantite <= 10 %}
                                                    <div class="offer"><p><span>Promotion</span></p></div>
                                                {% endif %}
                                            </a>
                                            <div class="mid-1">
                                                <div class="women">

                                                    <h6><a href="">{{  produit.libelle }}</a>({{ produit.marque }})</h6>
                                                </div>
                                                <div class="mid-2">

                                                    {% if produit.quantite <= 10 %}
                                                        <p ><label>{{ produit.prix }}</label><em class="item_price">{{produit.prix * 0.9}}</em></p>
                                                    {% else %}
                                                        <p ><em class="item_price">{{produit.prix }}DT</em></p>
                                                    {% endif %}

                                                    <div class="block">
                                                        <div class="starbox small ghosting"> </div>
                                                    </div>
                                                    <div class="clearfix"></div>
                                                </div>
                                                <div class="add">
                                                    <li class="btn btn-danger my-cart-btn my-cart-b" > <a  href="{{ path('produit_show', { 'idProduit': produit.idProduit }) }}">Afficher</a></li>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    {% endif %}
                {% endfor %}
            </div>
                    {% endfor %}
                </div>
{#**********************************************par entrepot********************************************************#}
    <div class="tab-pane text-style" id="tab2" >
         {% for category in categorys %}
             <nav class="nav-sidebar">

                 <ul class="nav tabs" >
                         <li class=""><a href="#{{ category.idCategorie }}" data-toggle="tab" id="ent1">{{ category.nom }}</a></li>
                 </ul>
             </nav>
                <div class="tab-pane  text-style" id="{{ category.idCategorie }}" role="tabpanel" >
                    {% for produit in produits %}
                        {% if produit.fkCategorie == category %}
                            <div class=" con-w3l">
                                <div class="col-md-3 m-wthree">
                                    <div class="col-m">
                                        <a href="#" data-toggle="modal" data-target="#myModal4" class="offer-img">
                                            <img src="{{ asset('public/images/produits/'~produit.imageName) }}" class="img-responsive img" alt="">
                                        </a>
                                        <div class="mid-1">
                                            <div class="women">

                                                <h6><a href="">{{  produit.libelle }}</a>({{ produit.marque }})</h6>
                                            </div>
                                            <div class="mid-2">
                                                <p ><em class="item_price">{{  produit.prix }} Dt</em></p>
                                                <div class="block">
                                                    <div class="starbox small ghosting"> </div>
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                            <div class="add">
                                                <li class="btn btn-danger my-cart-btn my-cart-b" > <a  href="{{ path('produit_show', { 'idProduit': produit.idProduit }) }}">Afficher</a></li>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
    </div>
    </div>
    </div>

    </div>
    </div>
{#**********************************************par categorie********************************************************#}
