{% extends 'base.html.twig' %}

{% block content %}
    <div class="banner-top">
        <div class="container">
            <h3 >Produit</h3>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="content-top ">
        <div class="container ">
            <div class="table-head ">
                {% for entrepot in entrepots %}

                <nav class="nav justify-content-center">
                     <ul class="nav tabs dropdown " id="myTab" role="tablist">
                            <li class="nav-item"><a href="#{{ entrepot.numFiscale }}" data-toggle="tab" role="tab">{{ entrepot.entreprise }}</a></li>
                                        <nav class="nav-sidebar" >
                                            <ul class="nav tabs dropdown ">
                                                        {% for category in categorys %}
                                                                {% if category.fkEntrepot == entrepot  %}
                                                                <li class=""><a  href="#{{ category.idCategorie }}" data-toggle="tab"  >{{ category.nom }}</a></li>

                                                                {% endif %}
                                                        {% endfor %}
                                            </ul>
                                        </nav>



                                            </ul>
                </nav>
                    <div class=" tab-content table tab-content-t "  style="display:block;width: 100%" id="myTabContent">
                        {% for category in categorys %}
                            <div class="tab-pane dropdown text-style" id="{{ category.idCategorie }}" role="tabpanel" >
                                {% for produit in produits %}
                                    {% if produit.fkCategorie == category %}

                                        <div class=" con-w3l">
                                            <div class="col-md-3 m-wthree">
                                                <div class="col-m">
                                                    <a href="#" data-toggle="modal" data-target="#myModal4" class="offer-img">
                                                        <img src="{{ asset('public/images/produits/'~produit.imageName) }}" class="img-responsive img" alt="">
                                                    </a>
                                                    <div class="mid-1">
                                                        <div class="women">

                                                            <h6><a href="">{{  produit.libelle }}</a>({{ produit.marque }})</h6>
                                                        </div>
                                                        <div class="mid-2">
                                                            <p ><em class="item_price">{{  produit.prix }} Dt</em></p>
                                                            <div class="block">
                                                                <div class="starbox small ghosting"> </div>
                                                            </div>
                                                            <div class="clearfix"></div>
                                                        </div>
                                                        <div class="add">
                                                            <li class="btn btn-danger my-cart-btn my-cart-b" > <a  href="{{ path('produit_show', { 'idProduit': produit.idProduit }) }}">Afficher</a></li>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}


                </div>
        </div>
    </div>

    <div class="form-w3agile form1">
        <center><br>
            <a href="{{ path('produit_new') }}"><input type="submit" value="Ajouter un nouveau produit" /></a>

        </center>
    </div>
    <script>
        function ShowDiv() {

            {% for category in categorys %}
            document.getElementById("{{ category.idCategorie }}").style.display = "";
            {% endfor %}

        }
    </script>



{% endblock %}