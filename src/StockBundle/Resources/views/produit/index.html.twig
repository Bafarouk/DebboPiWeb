{% extends 'base.html.twig' %}

{% block content %}
        <div class="banner-top">
            <div class="container" >
                 <h3 > <center>Produits </h3></center>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="spec ">
            <h3>La liste des produits</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>

        <div class="bs-docs-example">
            <table class="table">
                <thead>
                <tr>
                    <th>Libelle</th>
                    <th>Reference</th>
                    <th>Marque</th>
                    <th>Prix</th>
                    <th>Quantite</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.libelle }}</td>
                        <td>{{ produit.reference }}</td>
                        <td>{{ produit.marque }}</td>
                        <td>{{ produit.prix }}</td>
                        <td>{{ produit.quantite }}</td>
                        <td>{{ produit.image }}</td>
                        <td>
                            <ul>
                                <li class="label label-info" > <a style="color:white"  href="{{ path('produit_show', { 'idProduit': produit.idProduit }) }}">show</a></li>
                                <li class="label label-default"><a style="color: white" href="{{ path('produit_edit', { 'idProduit': produit.idProduit }) }}">edit</a></li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            <li class="label label-default"><a style="color: white"  href="{{ path('produit_new') }}"> <center> Cr√©er un nouveau produit</center></a></li>
        </div>


    {% endblock %}
