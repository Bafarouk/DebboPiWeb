{% extends 'base.html.twig' %}
{% block body %}

    <div class="banner-top">
        <div class="container">
            <h3 >Entrepot</h3>
            <h4><a href="/DebboPiWeb/web/app_dev.php/">Accueil</a><label>/</label><a href="/DebboPiWeb/web/app_dev.php/entrepot/">Entrepot</a><label>/</label>Demandes de location</h4>

            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="spec ">
        <h3>Les demandes de location d'un entrepot</h3>
        <div class="ser-t">
            <b></b>
            <span><i></i></span>
            <b class="line"></b>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">

                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <div class="data-table-area mg-b-15">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="sparkline13-list">
                                        <div class="sparkline13-hd">
                                        </div>
                                        <div class="sparkline13-graph">
                                            <div class="datatable-dashv1-list custom-datatable-overright">

                                                <table id="table" class="table table-head-fixed text-nowrap"  data-toggle="table"
                                                       data-pagination="true" data-search="true" data-show-columns="true"
                                                       data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"
                                                       data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">

                                                    <thead>
                                                    <tr>
                                                        <th>ID Entrepot</th>
                                                        <th>Adresse</th>
                                                        <th>Entreprise</th>
                                                        <th>Client</th>
                                                        <th>Date debut Location</th>
                                                        <th>Date fin Location</th>
                                                        <th>Prix Location</th>
                                                        <th>Email</th>
                                                        <th>Numero de telephone</th>
                                                        <th data-field="action">Actions</th>

                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for entrepot in entrepots  %}

                                                        <tr>
                                                            <td>{{ entrepot.id_Entrepot}}</td>
                                                            <td>{{ entrepot.adresse}}</td>
                                                            <td>{{ entrepot.entreprise}}</td>
                                                            <td>{{ entrepot.prenom }} {{ entrepot.nom }} </td>
                                                            <td>{% if entrepot.dateDebLocation %}{{ entrepot.dateDebLocation|date('Y-m-d') }}{% endif %}</td>
                                                            <td>{% if entrepot.dateFinLocation %}{{ entrepot.dateFinLocation|date('Y-m-d') }}{% endif %}</td>
                                                            <td>{{ entrepot.prixLocation}}</td>
                                                            <td>{{ entrepot.email}}</td>
                                                            <td>{{ entrepot.tel}}</td>

                                                            <td>
                                                                <ul> <a class="btn btn-app-conf"  href="{{ path('entrepot_confirme_demande', { 'idEntrepot': entrepot.id_Entrepot }) }}">
                                                                        <i class="fa fa-check-circle"></i>Confirmer</a>
                                                                    <a class="btn btn-app" href="{{ path('entrepot_delete_demande', { 'idLocation': entrepot.id_Location }) }}">
                                                                            <i class="fa fa-close"></i>Refuser</a>
                                                                </ul>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>



            <!-- /.card -->
        </div>
    </div>




{% endblock %}
{% block JS %}
    <script src="{{ asset('data-table/bootstrap-table.js')}}"></script>
    <script src="{{ asset('data-table/tableExport.js')}}"></script>
    <script src="{{ asset('data-table/data-table-active.js')}}"></script>
    <script src="{{ asset('data-table/bootstrap-table-editable.js')}}"></script>
    <script src="{{ asset('data-table/bootstrap-editable.js')}}"></script>
    <script src="{{ asset('data-table/bootstrap-table-resizable.js')}}"></script>
    <script src="{{ asset('data-table/colResizable-1.5.source.js')}}"></script>
    <script src="{{ asset('data-table/bootstrap-table-export.js')}}"></script>
{% endblock %}
