{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="banner-top">
        <div class="container" >
            <h3 > Profile </h3>
            <div class="clearfix"> </div>
        </div>
    </div>

    <div class="login">

        <div class="main-agileits">
            <div class="form-w3agile">
                <h3>Profile</h3>
                <form action="#" method="post">
                        <div class="key">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <p> Nom  : <br>{{ user.nom }}</p>
                            <div class="clearfix"></div>
                        </div><div class="key">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        <p>{{ 'profile.show.username'|trans }}:<br> {{ user.username }}</p>
                            <div class="clearfix"></div>
                        </div>

                    <div class="key">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        <p> Prenom  : <br>{{ user.prenom }}</p>
                            <div class="clearfix"></div>
                        </div>
                    <div class="key">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                        <p> Date  : <br>{{ user.date | date   }}</p>
                            <div class="clearfix"></div>
                        </div>
                    <div class="key">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        <p> Telephone  :<br> {{ user.tel }}</p>
                            <div class="clearfix"></div>
                        </div>
                    <div class="key">
                            <i class="fa fa-credit-card" aria-hidden="true"></i>
                        <p>CIN  : <br>{{ user.cin }}</p>
                            <div class="clearfix"></div>
                        </div>
                    <div class="key">
                            <i class="fa fa-mail-forward" aria-hidden="true"></i>
                        <p>{{ 'profile.show.email'|trans }}:    <br>{{ user.email }}</p>
                            <div class="clearfix"></div>
                        </div>

                </form>
            </div>

                <br><center><input type="submit" value="{{ 'registration.submit'|trans }}" /></center>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>


</div>
